{
  "extends": ["eslint:recommended", "react-app"],
  "plugins": ["react-hooks"],
  "rules": {
    "quotes": [1, "single"],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "env": {
    "browser": true,
    "node": false,
    "es6": true,
    "commonjs": false,
    "mocha": false
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": "latest",
    "sourceType": "module"
  }
}
